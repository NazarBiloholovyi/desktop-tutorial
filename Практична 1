#include <stdio.h>

int main() {
    int t1, t2, t3;
    printf("Введіть три числа через пробіл: ");
    scanf("%d %d %d", &t1, &t2, &t3);

    // Розрахунок сумарного часу
    double total_time = 1.0 / t1 + 1.0 / t2 + 1.0 / t3;

    // Округлення до 2 знаків після коми
    total_time = 1.0 / total_time;

    printf("Час, за який гості разом можуть з'їсти пиріг: %.2f годин\n", total_time);

    return 0;
}
